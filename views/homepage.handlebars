<ol class="post-list">
  {{#each posts as |post|}}
  <li>
    <article class="post">
      <div class="title">
        <h2>{{title}}</h2>
        <span>Posted by {{username}} on {{created_at}}</span>
      </div>
      <div class="content">
        <p>{{post_content}}</p>
      </div>
    </article>
  </li>
  {{/each}}
</ol>